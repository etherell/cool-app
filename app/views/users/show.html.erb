<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
     <% if @user.avatar.nil? %>
     	<%= gravatar_for @user %>
     <% else %>
     	<%= image_tag @user.avatar, class: "avatar" %>
     <% end %>

	<h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>